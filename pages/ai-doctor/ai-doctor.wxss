/* AI助手智能医生页面样式 */

/* 自定义导航栏样式 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 32rpx 16rpx 32rpx;
  box-sizing: border-box;
}

/* 左侧历史按钮 */
.nav-left-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1001;
}

.nav-left-btn--close {
  background: transparent;
}

.nav-left-btn:active {
  transform: scale(0.95);
}

.nav-icon {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.nav-icon-img {
  width: 36rpx;
  height: 36rpx;
}

/* 中间标题区域 */
.nav-center {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.nav-title-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.nav-title-wrapper:active {
  background: rgba(76, 175, 80, 0.1);
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.nav-dropdown-icon {
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.nav-dropdown-icon--up {
  transform: rotate(180deg);
}

/* 新建对话下拉框 */
.new-conv-dropdown {
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #e5e5e5;
  min-width: 200rpx;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1002;
  margin-top: 8rpx;
}

.new-conv-dropdown--show {
  opacity: 1;
  visibility: visible;
}

.new-conv-dropdown::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 8rpx solid white;
}

.dropdown-item {
  padding: 24rpx 32rpx;
  transition: background 0.3s ease;
}

.dropdown-item:active {
  background: rgba(76, 175, 80, 0.1);
}

.dropdown-text {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
}

/* 右侧占位 */
.nav-right-placeholder {
  width: 60rpx;
  height: 60rpx;
}

/* 下拉框遮罩 */
.dropdown-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background: transparent;
}

.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  position: relative;
  box-sizing: border-box;
  padding-top: var(--nav-height, 88px); /* 为自定义导航栏留出空间 */
  margin-top: 0;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border-radius: 0;
  overflow: hidden;
}

/* 侧边栏打开时的主内容区域样式 */
.container.sidder-open {
  transform: translateX(600rpx) scale(0.85);
  box-shadow: -10rpx 0 30rpx rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
}

/* 顶部健康数据概览 */
.health-overview-top {
  background: white;
  border-radius: 0 0 18rpx 18rpx;
  padding: 12rpx 20rpx 16rpx 20rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  width: 100%;
  z-index: 100;
  margin-top: 0;
  box-sizing: border-box;
}

/* 聊天区域样式 */
.chat-section {
  flex: 1;
  padding: 0 16rpx 16rpx 16rpx;
  margin-bottom: 0rpx; /* 为底部输入框、功能按钮和导航栏留出足够空间 */
  overflow-y: auto;
}

.overview-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.data-cards {
  display: flex;
  gap: 13rpx; /* 增加10% */
}

.data-card {
  flex: 1;
  background: #f8f9fa;
  border-radius: 13rpx; /* 增加10% */
  padding: 15rpx; /* 增加10% */
  text-align: center;
  position: relative;
}

.data-label {
  font-size: 26rpx; /* 增加10% */
  color: #666;
  display: block;
  margin-bottom: 9rpx; /* 增加10% */
}

.data-value {
  font-size: 33rpx; /* 增加10% */
  font-weight: bold;
  color: #333;
  display: block;
}

.status-dot {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #ccc;
}

.status-dot.normal { background-color: #3cc51f; }
.status-dot.warning { background-color: #ff9500; }
.status-dot.danger { background-color: #ff3333; }

/* 聊天消息样式 */
.chat-messages {
  padding: 12rpx 0;
}

.message-item {
  display: flex;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.message-item.user {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #3cc51f; /* 统一绿色主题 */
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 16rpx;
}

.message-item.user .message-avatar {
  background: #28a745;
}

.avatar-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.message-content {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  max-width: 70%;
  position: relative;
  box-sizing: border-box; /* 确保padding计算在宽度内 */
  overflow: hidden; /* 防止内容溢出 */
}

.message-content.streaming {
  border: 2rpx solid #3cc51f;
  box-shadow: 0 2rpx 8rpx rgba(60, 197, 31, 0.2);
}

.message-item.user .message-content {
  background: #3cc51f; /* 统一绿色主题 */
  color: white;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
  margin-bottom: 8rpx;
  word-wrap: break-word; /* 强制长单词换行 */
  word-break: break-all; /* 允许在任意字符间换行 */
  white-space: pre-wrap; /* 保留空格和换行，并自动换行 */
  overflow-wrap: break-word; /* 现代浏览器的换行属性 */
}

.message-time {
  font-size: 20rpx;
  opacity: 0.7;
  display: block;
}



/* 思考状态样式 */
.loading-message {
  display: flex;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.ai-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f9ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  border: 2rpx solid #e8f4fd;
}

.avatar-icon {
  width: 40rpx;
  height: 40rpx;
}

.thinking-content, .organizing-content {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  max-width: 500rpx;
  position: relative;
  border: 1rpx solid #e8e8e8;
}

.thinking-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.thinking-subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #e8e8e8;
  border-top: 3rpx solid #3cc51f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 预制建议选项 */
.preset-suggestions {
  padding: 30rpx 20rpx;
  background: transparent;
}

.suggestion-item {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx 50rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.suggestion-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.02) 0%, rgba(76, 175, 80, 0.05) 100%);
  pointer-events: none;
}

.suggestion-item:active {
  background: #f0f9f0;
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

.suggestion-text {
  color: #2c2c2c;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.4;
  flex: 1;
}

.suggestion-arrow {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 20rpx;
  transition: all 0.3s ease;
}

.suggestion-item:active .suggestion-arrow {
  background: #4CAF50;
  color: white;
  transform: translateX(4rpx);
}

/* 底部输入区域 - 新设计 */
.input-section-bottom {
  position: fixed;
  bottom: 0rpx; /* 更靠下，在底部导航栏上方 */
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #e0e0e0;
  border-radius: 20rpx 20rpx 0 0; /* 上方两个角设为圆角 */
  padding: 16rpx 20rpx 16rpx 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

/* 输入框样式 */
.input-container-coffee {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 8rpx 8rpx 8rpx 30rpx;
  border: 1rpx solid #e8e8e8;
}

.input-wrapper-coffee {
  flex: 1;
}

.message-input-coffee {
  width: 100%;
  height: 80rpx;
  border: none;
  background: transparent;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
}

.message-input-coffee::placeholder {
  color: #999;
}

.send-btn-coffee {
  width: 80rpx;
  height: 80rpx;
  background: #3cc51f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-btn-coffee:not(.active) {
  background: #e8e8e8;
}

.send-icon {
  width: 40rpx;
  height: 40rpx;
}

.send-text {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.send-btn-coffee.active .send-text {
  color: white;
}

/* 历史对话列表样式 */
.session-history {
  display: flex;
  flex-direction: column;
  height: calc(100% - 100rpx);
  position: relative;
}

.session-history__title {
  height: 96rpx;
  justify-content: space-between;
  padding: 0 32rpx;
  align-items: center;
  display: flex;
}

.session-history__title .tabs {
  align-items: center;
  display: flex;
  gap: 32rpx;
  position: relative;
  flex: 1;
  justify-content: space-between;
}

.session-history__title .title {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 45rpx;
}

.session-history__title .title.active {
  color: #4CAF50;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 45rpx;
}

.session-history .tabs-content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.session-history__content {
  height: 100%;
  overflow-y: auto;
  position: relative;
}

.session-history__list {
  margin-bottom: 32rpx;
  margin-top: 8rpx;
  padding: 0 32rpx;
  position: relative;
}

.session-history__list .period {
  color: #666;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 34rpx;
  margin-bottom: 8rpx;
  display: block;
}

.session-history__list:last-child {
  padding-bottom: 18rpx;
}

.session-history__item {
  align-items: center;
  background-color: #fff;
  border-radius: 24rpx;
  display: flex;
  gap: 16rpx;
  justify-content: space-between;
  margin-top: 16rpx;
  padding: 24rpx;
  position: relative;
  transition: all 0.3s ease;
}

.session-history__item.selected {
  background-color: rgba(76, 175, 80, 0.05);
  border: 2rpx solid #4CAF50;
}

.session-history__item:active {
  background-color: rgba(76, 175, 80, 0.1);
  transform: scale(0.98);
}

.session-history__item .item-info {
  color: #666;
  flex: 1;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  overflow: hidden;
}

.session-history__item .item-info__name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
}

.session-history__item .item-info__msg {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
}

.session-history__item .item-info__text {
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.session-history__item .item-label {
  color: #999;
  font-size: 22rpx;
  flex-shrink: 0;
}

.session-history__empty {
  flex: 1;
  flex-direction: column;
  position: relative;
  align-items: center;
  display: flex;
  justify-content: center;
}

.session-history__empty__icon {
  align-items: center;
  display: flex;
  justify-content: center;
  background-color: rgba(76, 175, 80, 0.1);
  border-radius: 50%;
  color: #4CAF50;
  flex-direction: column;
  height: 128rpx;
  width: 128rpx;
}

.session-history__empty__icon .empty-icon {
  font-size: 48rpx;
}

.empty-icon-img {
  width: 64rpx;
  height: 64rpx;
}

.session-history__empty__text {
  color: #999;
  font-size: 24rpx;
  margin-top: 16rpx;
}

/* 编辑控制按钮 */
.edit-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.edit-btn {
  padding: 8rpx 16rpx;
  border: 2rpx solid #3cc51f;
  border-radius: 8rpx;
  background: transparent;
  transition: all 0.3s ease;
}

.edit-btn--disabled {
  border-color: #ccc;
  opacity: 0.5;
  pointer-events: none;
}

.edit-text {
  color: #3cc51f;
  font-size: 28rpx;
  font-weight: 500;
}

.edit-btn--disabled .edit-text {
  color: #ccc;
}

.edit-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.edit-action-btn {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
  text-align: center;
}

.clear-btn {
  background: transparent;
  border: 2rpx solid #999;
}

.clear-btn .action-text {
  color: #999;
  font-size: 28rpx;
}

.done-btn {
  background: #3cc51f;
  border: 2rpx solid #3cc51f;
}

.done-btn .action-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

/* 编辑模式下的对话项 */
.session-history__item.edit-mode {
  position: relative;
  padding-right: 200rpx; /* 为操作按钮留出空间 */
}

/* 置顶对话样式 */
.session-history__item.pinned {
  background: linear-gradient(135deg, rgba(60, 197, 31, 0.05) 0%, rgba(60, 197, 31, 0.02) 100%);
  border-left: 4rpx solid #3cc51f;
}

.item-actions {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.action-icon:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.1);
}

.icon-text {
  font-size: 24rpx;
}

.action-icon-img {
  width: 32rpx;
  height: 32rpx;
}

.edit-icon {
  background: rgba(60, 197, 31, 0.1);
}

.pin-icon {
  background: rgba(255, 149, 0, 0.1);
}

.delete-icon {
  background: rgba(255, 51, 51, 0.1);
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.dialog-container {
  background: #fff;
  border-radius: 18rpx; /* 稍微减小圆角 */
  padding: 36rpx 28rpx; /* 稍微减小内边距 */
  max-width: 520rpx; /* 稍微减小宽度 */
  width: 88%; /* 稍微减小宽度 */
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15); /* 增强阴影 */
}

.dialog-title {
  font-size: 34rpx; /* 稍微减小字体 */
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 36rpx; /* 增加标题下边距 */
  letter-spacing: 1rpx; /* 增加字间距 */
}

.dialog-content {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx; /* 增加内容下边距 */
  line-height: 1.5;
}

.dialog-actions {
  display: flex;
  gap: 16rpx; /* 减小按钮间距 */
  margin-top: 32rpx; /* 减小按钮区域上边距 */
}

.dialog-btn {
  flex: 1;
  padding: 18rpx; /* 减小按钮内边距 30% */
  border-radius: 12rpx; /* 相应减小圆角 */
  text-align: center;
  font-size: 26rpx; /* 减小字体 30% */
  font-weight: 500;
  transition: all 0.2s ease; /* 添加过渡动画 */
  min-height: 56rpx; /* 减小最小高度 30% */
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-btn:active {
  transform: scale(0.98);
}

.cancel-btn {
  background: #f8f8f8; /* 稍微调亮背景 */
  color: #666;
  border: 1rpx solid #e8e8e8; /* 添加边框 */
}

.cancel-btn:active {
  background: #eeeeee;
}

.confirm-btn {
  background: #ff3333;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 51, 51, 0.3); /* 添加阴影 */
}

.confirm-btn:active {
  background: #e62e2e;
  box-shadow: 0 2rpx 8rpx rgba(255, 51, 51, 0.4);
}

/* 重命名对话框特殊样式 */
.rename-dialog .dialog-content {
  position: relative;
  text-align: left;
}

.rename-input {
  width: 100%;
  padding: 24rpx 60rpx 24rpx 20rpx; /* 平衡的内边距 */
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
  height: 76rpx; /* 稍微减小高度 */
  line-height: normal; /* 使用默认行高 */
  text-align: left; /* 确保文字左对齐 */
  vertical-align: top; /* 垂直对齐到顶部 */
}

.rename-input:focus {
  border-color: #3cc51f;
  background: #fff; /* 聚焦时变为白色背景 */
  box-shadow: 0 0 0 4rpx rgba(60, 197, 31, 0.1); /* 添加聚焦阴影 */
  outline: none;
}

.input-clear {
  position: absolute;
  right: 20rpx;
  top: 50%; /* 回到50%定位 */
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  z-index: 10;
}

.input-clear:active {
  background: rgba(0, 0, 0, 0.25); /* 点击时加深 */
  transform: translateY(-50%) scale(0.9); /* 点击缩放效果 */
}

.clear-icon {
  font-size: 20rpx; /* 稍微减小图标 */
  color: #666;
  font-weight: 600;
  line-height: 1; /* 确保图标垂直居中 */
}

.rename-dialog .confirm-btn {
  background: #3cc51f;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.3); /* 绿色阴影 */
}

.rename-dialog .confirm-btn:active {
  background: #359a1c;
  box-shadow: 0 2rpx 8rpx rgba(60, 197, 31, 0.4);
}

/* 成功提示 */
.success-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  padding: 24rpx 40rpx;
  border-radius: 12rpx;
  z-index: 3000;
  animation: fadeInOut 2s ease-in-out;
}

.toast-text {
  font-size: 28rpx;
}

@keyframes fadeInOut {
  0% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  20% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
  80% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
  100% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
}
