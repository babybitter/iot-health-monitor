<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.lingshu.smart.monitor.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_detection"
        android:name="com.lingshu.smart.monitor.ui.detection.DetectionFragment"
        android:label="@string/title_detection"
        tools:layout="@layout/fragment_detection" />

    <fragment
        android:id="@+id/navigation_ai_assistant"
        android:name="com.lingshu.smart.monitor.ui.aiassistant.AiAssistantFragment"
        android:label="@string/title_ai_assistant"
        tools:layout="@layout/fragment_ai_assistant" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.lingshu.smart.monitor.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>