/* 自定义导航栏样式 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 0 32rpx 16rpx 32rpx;
  box-sizing: border-box;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.container{
  padding: 20rpx;
  padding-bottom: 140rpx; /* 为底部导航栏留出空间 */
}

/* 分类模块样式 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
}
/* body */
.body-wrapper{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}
.date-logo image{
  width: 80rpx;
  height: 80rpx;
}
.date{
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  width: 265rpx;
  height: 140rpx;
  border-radius:30rpx ;
  box-shadow: #77778a 0 0 8rpx;
  padding: 15rpx 10rpx;
  margin-bottom: 8rpx;
}
.date-logo{
  display: flex;
  align-items: center;
}
.date-text{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.date-title{
  font-size: 24rpx;
  color: #666;
}
.date-value{
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 开关样式调整 */
switch {
  transform: scale(0.7);
}

/* 吊瓶重量监测样式 */
.weight-section {
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: #77778a 0 0 8rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.weight-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.weight-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.weight-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.weight-info {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.weight-control-btn {
  background-color: #ff5757;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin: 20rpx 0;
  border: none;
}

.weight-control-btn:active {
  background-color: #e04848;
}
