/* 监测历史记录页面样式 */

/* 自定义导航栏样式 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #3cc51f;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 32rpx 16rpx 32rpx;
  box-sizing: border-box;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.nav-placeholder {
  width: 60rpx;
  height: 60rpx;
}

/* 页面样式 */
page {
  background-color: #f5f5f5;
}

.page-content {
  padding: 0 30rpx 30rpx 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 时间范围显示 */
.time-range {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.time-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  display: block;
}

/* 图表容器 */
.chart-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 550px; /* 增加容器高度，为图例留出更多空间 */
  position: relative;
}

.chart-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.chart-canvas {
  width: 100%;
  height: 400px; /* 调整画布高度，为内联图例留出空间 */
  display: block; /* 确保显示为块级元素 */
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.error-text {
  font-size: 28rpx;
  color: #e74c3c;
  margin-bottom: 30rpx;
}

.retry-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.retry-btn {
  background: #3cc51f;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  flex: 1;
  max-width: 200rpx;
}

.retry-btn.secondary {
  background: #666;
}

/* 空数据状态 */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 内联数据说明 */
.data-legend-inline {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.legend-title-inline {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.legend-items-inline {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.legend-row-inline {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  flex-wrap: wrap;
}

.legend-item-inline {
  display: flex;
  align-items: center;
  padding: 6rpx 12rpx;
  background-color: #f9f9f9;
  border-radius: 30rpx;
}

.legend-color-inline {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-text-inline {
  font-size: 22rpx;
  color: #666;
}
