/* 监测历史记录页面样式 */

/* 自定义导航栏样式 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #3cc51f;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 32rpx 16rpx 32rpx;
  box-sizing: border-box;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.nav-placeholder {
  width: 60rpx;
  height: 60rpx;
}

/* 页面样式 */
page {
  background-color: #f5f5f5;
}

.page-content {
  padding: 0 30rpx 30rpx 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 时间范围显示 */
.time-range {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.time-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  display: block;
}

/* 图表容器 */
.chart-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 500px; /* 明确设置容器高度 */
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 400px; /* 使用px而不是rpx，确保高度固定 */
  display: block; /* 确保显示为块级元素 */
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.error-text {
  font-size: 28rpx;
  color: #e74c3c;
  margin-bottom: 30rpx;
}

.retry-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.retry-btn {
  background: #3cc51f;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  flex: 1;
  max-width: 200rpx;
}

.retry-btn.secondary {
  background: #666;
}

/* 空数据状态 */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 数据说明 */
.data-legend {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.legend-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.legend-items {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  width: calc(50% - 10rpx);
  margin-bottom: 20rpx;
}

.legend-color {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.legend-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}
